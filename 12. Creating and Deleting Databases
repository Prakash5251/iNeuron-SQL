SYNTAX : CREATE DATABASE

create database database_name;

(Input the Database Name)

------------------------------------------------------------

SYNTAX : DROP DATABASE

drop database

drop database database_name;

------------------------------------------------------------
SYNTAX : USE DATABASE

use database

use database database_name;

